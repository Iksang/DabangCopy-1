<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kr.co.tjeit.dabangcopy.RequestMoveActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher_round"/>
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0F0F0F"
            android:text="이사견적 신청"/>
    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DEDEDE"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <TextView
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#0F0F0F"
                    android:text="다방과 정식으로 업무제휴를 한 업체에\n이사 견적을 의뢰해 드립니다."/>

                <LinearLayout
                    tools:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1. 어떤 이사를 하실건가요?"
                        android:textColor="#0F0F0F"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/typeOfMovingTxt1"
                                android:layout_width="0dp"
                                android:layout_height="120dp"
                                android:layout_weight="1"
                                android:background="#176DE1"
                                android:gravity="center"
                                android:text="원룸일반이사"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/typeOfMovingTxt2"
                                android:layout_width="0dp"
                                android:layout_height="120dp"
                                android:layout_weight="1"
                                android:background="#C2C2C2"
                                android:gravity="center"
                                android:text="원룸포장이사"
                                android:textColor="@color/white" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/typeOfMovingTxt3"
                                android:layout_width="0dp"
                                android:layout_height="120dp"
                                android:layout_weight="1"
                                android:background="#C2C2C2"
                                android:gravity="center"
                                android:text="가정포장이사"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/typeOfMovingTxt4"
                                android:layout_width="0dp"
                                android:layout_height="120dp"
                                android:layout_weight="1"
                                android:background="#C2C2C2"
                                android:gravity="center"
                                android:text="원룸일반이사"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    tools:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2. 이사 정보를 알려주세요."
                        android:textColor="#0F0F0F"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="이사 날짜"
                            android:textColor="#0F0F0F" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/inputDateTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:background="@drawable/gray_boader_white_round_box"
                            android:text="날짜입력" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="주소 입력"
                            android:textColor="#0F0F0F" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"

                            android:text="예) 서울특별시 강남구 역삼동" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gray_boader_white_round_box"
                        android:orientation="vertical">
                        <EditText
                            android:focusable="false"
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#00000000"
                            android:hint="출발시 주소 입력"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#DCDCDC"/>

                        <EditText
                            android:focusable="false"
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#00000000"
                            android:hint="도착시 주소 입력" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    tools:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3. 견적 받으실 정보를 알려주세요."
                        android:textColor="#0F0F0F"
                        android:textStyle="bold" />




                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gray_boader_white_round_box"
                        android:orientation="vertical">
                        <EditText
                            android:focusable="false"
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#00000000"
                            android:hint="고객명"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#DCDCDC"/>

                        <EditText
                            android:focusable="false"
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#00000000"
                            android:hint="휴대폰번호" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="이사 종류별 단가 안내"/>
                <TableLayout
                    android:padding="10dp"
                    android:stretchColumns="1,2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#F4F4F4">
                        <TextView
                            android:padding="5dp"
                            android:text="이사 종류"/>
                        <TextView
                            android:padding="5dp"
                            android:text="평일 (일~목)"/>
                        <TextView
                            android:padding="5dp"
                            android:text="금~토요일, 손없는날"/>
                    </TableRow>
                    <TableRow
                        android:background="@color/white">
                        <TextView
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:text="원룸이사"/>
                        <TextView
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:text="9만 3천원"/>
                        <TextView
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:text="9만 3천원원"/>
                    </TableRow>
                    <TableRow
                        android:background="@color/white">
                        <TextView
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:text="원룸포장이사"/>
                        <TextView
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:text="35만원"/>
                        <TextView
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:text="35만원"/>
                    </TableRow>
                    <TableRow
                        android:background="@color/white">
                        <TextView
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:text="가정포장이사"/>
                        <TextView
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:text="88만원"/>
                        <TextView
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:text="112만원"/>
                    </TableRow>
                    <TableRow
                        android:background="@color/white">
                        <TextView
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:text="보관이사"/>
                        <TextView
                            android:layout_span="2"
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:text="1일당 보관 비용 + 왕복 운반 비용 별도"/>

                    </TableRow>
                </TableLayout>
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="유의사항"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="· 이동거리 및 물량에 따라 금액이 변동될 수 있습니다."/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="· 사다리차, 에어컨 설치 등 외부업체 비용은 별도입니다."/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#0000FF"
                        android:text="[필수]"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="개인정보 수집 및 이용에 대한 동의"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_round_button"
                android:textColor="@color/white"
                android:text="견적 신청 하기"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
